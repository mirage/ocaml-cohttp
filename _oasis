  Build$: flag(lwt)
  Install$: flag(lwt)
  Path: lwt
  Findlibname: lwt
  FindlibParent: cohttp
  BuildDepends: lwt.unix, lwt, uri, cohttp, lwt.ssl, lwt.syntax
  Modules: Cohttp_lwt_unix, Cohttp_lwt, Cohttp_lwt_net, Cohttp_lwt_body, Cohttp_lwt_make

